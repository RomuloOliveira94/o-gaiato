<div class="container mx-auto p-4 text-center">
  <%= turbo_stream_from @game %>
  <div id="<%= dom_id(@game) %>">
    <h1 class="text-4xl font-bold mb-8">O Gaiato!</h1>  
    <% if @game.waiting? %>
      <%= render 'games/lobby', game: @game %>
    <% elsif @game.in_progress? %>
      <%= render 'games/in_game', game: @game %>
    <% elsif @game.finished? %>
      <%= render 'games/results', game: @game %>
    <% end %>
  </div>
</div>