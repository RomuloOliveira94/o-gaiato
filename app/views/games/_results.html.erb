<div>
  <h2 class="text-3xl font-bold mb-6 text-center">Resultado do Jogo!</h2>
  <% if game.result == "players_win" %>
    <div class="text-center mb-6">
      <h3 class="text-2xl font-bold text-green-600 mb-2">🎉 Jogadores Venceram! 🎉</h3>
      <p class="text-lg">O Gaiato foi descoberto!</p>
    </div>
  <% elsif game.result == "spy_wins" %>
    <div class="text-center mb-6">
      <h3 class="text-2xl font-bold text-red-600 mb-2">🕵️ O Gaiato Venceu! 🕵️</h3>
      <p class="text-lg">O Gaiato conseguiu se esconder!</p>
    </div>
  <% end %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-4">
    <div class="space-y-6 border-r border-gray-300 pr-8">
      <h1 class="text-2xl font-semibold">Jogadores:</h1>
      <div id="players-list" class="space-y-2">
        <%= render game.players %>
      </div>
    </div>
    <div class="mb-4 bg-primary p-4 rounded-md flex flex-col w-full items-center justify-center">
      <h4 class="text-xl font-semibold mb-3">Informações do Jogo:</h4>
      <p class="text-lg mb-2"><strong>Categoria:</strong> <span class="font-bold text-xl">
          <%= game.category.name %>
        </span></p>
      <p class="text-lg mb-2"><strong>Palavra secreta:</strong> <span class="font-bold text-secondary text-xl uppercase"><%= game.word.text %></span></p>
      <p class="text-lg mb-4"><strong>O Gaiato era:</strong> <span class="font-bold text-red-600 text-xl uppercase"><%= game.spy_player.name %></span></p>
    </div>
  </div>
  <div class="text-center mt-8">
    <%= link_to "Jogar Novamente", root_path, class: "btn-primary text-xl" %>
  </div>
</div>
