<% flash.each do |type, message| %>
  <% next if message.blank? %>
  
  <% 
    case type.to_s
    when 'notice', 'success'
      icon_svg = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>'
      bg_color = 'bg-green-100'
      text_color = 'text-green-800'
      border_color = 'border-green-300'
      button_color = 'text-green-500 hover:text-green-700'
    when 'alert', 'error'
      icon_svg = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" /></svg>'
      bg_color = 'bg-red-100'
      text_color = 'text-red-800'
      border_color = 'border-red-300'
      button_color = 'text-red-500 hover:text-red-700'
    when 'warning'
      icon_svg = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" /></svg>'
      bg_color = 'bg-yellow-100'
      text_color = 'text-yellow-800'
      border_color = 'border-yellow-300'
      button_color = 'text-yellow-500 hover:text-yellow-700'
    when 'info'
      icon_svg = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" /></svg>'
      bg_color = 'bg-blue-100'
      text_color = 'text-blue-800'
      border_color = 'border-blue-300'
      button_color = 'text-blue-500 hover:text-blue-700'
    else
      icon_svg = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" /></svg>'
      bg_color = 'bg-gray-100'
      text_color = 'text-gray-800'
      border_color = 'border-gray-300'
      button_color = 'text-gray-500 hover:text-gray-700'
    end
  %>
  
  <div class="flash-message fixed top-4 right-4 z-50 <%= bg_color %> <%= text_color %> border <%= border_color %> px-3 py-2 rounded-lg shadow-lg flex items-center gap-2 animate-fade-in max-w-sm" 
       data-flash-type="<%= type %>"
       data-controller="flash-message"
       data-flash-message-auto-dismiss-value="true"
       style="margin-top: <%= flash.keys.index(type) * 60 %>px;">
    
    <div class="flex items-center flex-1">
      <div class="flex-shrink-0 mr-2">
        <%= icon_svg.html_safe %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="font-medium text-sm truncate"><%= message %></p>
      </div>
    </div>
    
    <button type="button" 
            class="<%= button_color %> ml-2 inline-flex text-sm font-medium focus:outline-none hover:opacity-70 transition-opacity"
            data-action="click->flash-message#dismiss"
            aria-label="Fechar">
      <svg class="h-3 w-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
<% end %>
